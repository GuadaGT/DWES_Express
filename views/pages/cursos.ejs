<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de Cursos</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Listado de cursos de Programación</h1>
        <ul>
            <% for (i = 0; i < misdatosProg.length; i++) { %>
                <li>
                    <strong><%= misdatosProg[i].titulo %></strong><br/>
                    <%= misdatosProg[i].nivel %>
                </li>
            <% } %>
        </ul>

        <h1>Listado de cursos de Matemáticas</h1>
        <ul>
            <% for (i = 0; i < misdatosMat.length; i++) { %>
                <li>
                    <strong><%= misdatosMat[i].titulo %></strong><br/>
                    <%= misdatosMat[i].nivel %>
                </li>
            <% } %>
        </ul>

        <form action="/api/cursos/prog" method="post" class="mt-4">
            <input type="hidden" name="categoria" value="prog">
            <div class="form-group">
                <label for="tituloProg">Título del curso:</label>
                <input type="text" class="form-control" id="tituloProg" name="titulo" required>
            </div>
            <div class="form-group">
                <label for="nivelProg">Nivel del curso:</label>
                <input type="text" class="form-control" id="nivelProg" name="nivel" required>
            </div>
            <button type="submit" class="btn btn-primary">Agregar Curso de Programación</button>
        </form>

        <form action="/api/cursos/mates" method="post" class="mt-4">
            <input type="hidden" name="categoria" value="mates">
            <div class="form-group">
                <label for="tituloMates">Título del curso:</label>
                <input type="text" class="form-control" id="tituloMates" name="titulo" required>
            </div>
            <div class="form-group">
                <label for="nivelMates">Nivel del curso:</label>
                <input type="text" class="form-control" id="nivelMates" name="nivel" required>
            </div>
            <button type="submit" class="btn btn-primary">Agregar Curso de Matemáticas</button>
        </form>

        <% if (typeof mensaje !== 'undefined') { %>
            <div class="alert alert-success mt-3" role="alert">
                <%= mensaje %>
            </div>
        <% } %>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
